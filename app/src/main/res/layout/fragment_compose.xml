<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/Task"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    tools:context=".fragments.ComposeFragment">

    <EditText
        android:id="@+id/etTaskDescription"
        android:layout_width="374dp"
        android:layout_height="63dp"
        android:layout_below="@+id/etTitle"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="17dp"
        android:ems="10"
        android:hint="What do you want to do?"
        android:inputType="textPersonName"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/etDate"
        android:layout_width="155dp"
        android:layout_height="73dp"
        android:layout_below="@+id/etTaskDescription"
        android:layout_alignParentStart="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="-13dp"
        android:height="48dp"
        android:drawableRight="@android:drawable/ic_menu_my_calendar"
        android:ems="10"
        android:hint="at which date?"
        android:inputType="date"
        android:maxLength="10" />

    <EditText
        android:id="@+id/etTime"
        android:layout_width="215dp"
        android:layout_height="71dp"
        android:layout_below="@+id/etTaskDescription"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="-11dp"
        android:layout_marginEnd="22dp"
        android:layout_toEndOf="@+id/etDate"
        android:height="48dp"
        android:drawableEnd="@android:drawable/ic_lock_idle_alarm"
        android:ems="10"
        android:hint="At what time?"
        android:inputType="time"
        android:maxLength="8" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etTime"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="341dp"
        android:layout_toEndOf="@+id/etDate"
        android:clickable="true"
        app:backgroundTint="#564F4F"
        app:srcCompat="@android:drawable/ic_menu_add" />

    <EditText
        android:id="@+id/etTitle"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="102dp"
        android:layout_marginTop="27dp"
        android:ems="10"
        android:hint="Title for task"
        android:inputType="textPersonName"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/etReminderTime"
        android:layout_width="265dp"
        android:layout_height="81dp"
        android:layout_below="@+id/etDate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="You will be reminded at->"
        android:inputType="time"
        android:maxLength="10"
        android:textAlignment="center" />

    <ImageView
        android:id="@+id/ivTaskImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/btnCaptureImage"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="43dp"
        android:layout_marginTop="-340dp"
        android:layout_marginBottom="200dp"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <Button
        android:id="@+id/btnCaptureImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etTime"
        android:layout_alignParentBottom="false"
        android:layout_centerInParent="true"
        android:layout_marginTop="101dp"
        android:layout_marginBottom="365dp"
        android:text="Add a Picture" />

</RelativeLayout>